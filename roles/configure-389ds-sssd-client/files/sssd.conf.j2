auth_provider = ldap
access_provider = ldap
chpass_provider = ldap
ldap_schema = rfc2307bis
ldap_search_base = {{domain_component}}
ldap_uri = {{uri_389}}


ldap_tls_reqcert = demand
ldap_tls_cacertdir = /etc/openldap/certs
ldap_access_filter = (memberOf=cn={{group_allowed}},ou=groups,{{domain_component}})

